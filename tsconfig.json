{
    "compilerOptions": {
        "alwaysStrict": true,
        "charset": "utf8",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "outDir": "./build",
        "removeComments": false,
        "sourceMap": false,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}